---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { aiNews } from "../../data/aiNews";
---

<BaseLayout title="Links" lead="Connect + current reading.">
  <section class="section">
    <div class="grid two">
      <div class="card reveal">
        <h2>LinkedIn</h2>
        <p class="muted">Connect with me here.</p>
        <div style="margin-top: 12px;">
          <div
            class="badge-base LI-profile-badge"
            data-locale="en_US"
            data-size="medium"
            data-theme="dark"
            data-type="VERTICAL"
            data-vanity="cole-calderon"
            data-version="v1"
          ></div>
        </div>
        <script src="https://platform.linkedin.com/badges/js/profile.js" async defer></script>
      </div>

      <div class="card reveal">
        <h2>AI / LLM news</h2>
        <p class="muted">
          Auto-updated weekly from Google AI, OpenAI, and arXiv cs.AI.
        </p>
        {aiNews.length ? (
          <div class="tag-row">
            <span class="tag">Weekly</span>
            <span class="tag">RSS</span>
            <span class="tag">AI / LLM</span>
          </div>
        ) : null}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="grid two">
      {aiNews.length ? (
        aiNews.slice(0, 12).map((item) => (
          <a class="card link-card reveal" href={item.url} rel="noreferrer">
            <h3>{item.title}</h3>
            <p class="muted">
              {item.source}{item.date ? ` · ${item.date}` : ""}
            </p>
            <div class="tag-row">
              <span class="tag">AI</span>
              <span class="tag">LLM</span>
              <span class="tag">News</span>
            </div>
          </a>
        ))
      ) : (
        <div class="card reveal">
          <h3>No news items yet</h3>
          <p class="muted">They’ll appear here after the weekly updater runs.</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
