---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { aiNews } from "../../data/aiNews";
---

<BaseLayout title="Links" lead="Connect + current reading.">
  <section class="section">
    <div class="grid two">
      <div class="card reveal">
        <h2>LinkedIn</h2>
        <p class="muted">Connect with me here.</p>
        <div style="margin-top: 12px;">
          <div
            class="badge-base LI-profile-badge"
            data-locale="en_US"
            data-size="medium"
            data-theme="dark"
            data-type="VERTICAL"
            data-vanity="cole-calderon"
            data-version="v1"
          ></div>
        </div>
        <script src="https://platform.linkedin.com/badges/js/profile.js" async defer></script>
      </div>

      <div class="card reveal">
        <h2>Elsewhere</h2>
        <p class="muted">GitHub, email, and other links live in the footer for now.</p>
        <div class="tag-row">
          <span class="tag">Remote</span>
          <span class="tag">US Citizen</span>
          <span class="tag">Open to AI Engineer roles</span>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="section-header">
      <h2>AI / LLM news</h2>
      <span class="muted">Auto-updated weekly (Google AI, OpenAI, arXiv cs.AI)</span>
    </div>

    <div class="grid two">
      {aiNews.length ? (
        aiNews.slice(0, 12).map((item) => (
          <a class="card link-card reveal" href={item.url} target="_blank" rel="noreferrer noopener">
            <div style="display: flex; align-items: flex-start; justify-content: space-between; gap: 0.5rem;">
              <h3 style="margin: 0 0 0.5rem;">{item.title}</h3>
              <span style="font-size: 0.9rem; flex-shrink: 0; opacity: 0.5;">↗</span>
            </div>
            <p class="muted" style="margin: 0; font-size: 0.85rem;">{item.source}{item.date ? ` · ${item.date}` : ""}</p>
          </a>
        ))
      ) : (
        <div class="card reveal">
          <h3>No news items yet</h3>
          <p class="muted">They'll appear here after the weekly updater runs.</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
