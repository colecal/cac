---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { site } from "../../data/site";
import { withBase } from "../../utils/links";
---
<BaseLayout title="Resume" lead="View or download my resume below.">
  <section class="section">
    <div class="grid two">
      <div class="card reveal">
        <h2>Download</h2>
        <p>
          Download a copy of my resume below.
        </p>
        <a class="button" href={withBase(site.resumePath)} download>
          Download resume
        </a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="embed large">
      <iframe
        src={`${withBase(site.resumePath)}#view=FitH`}
        title="Resume"
        loading="lazy"
      ></iframe>
    </div>
  </section>
</BaseLayout>
